<BorderPane prefHeight="700.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ckd.controller.viewcontroller.MainViewController"  stylesheets="@bootstrap3.css" >
   <top>
      <ToolBar prefHeight="50.0" prefWidth="1000.0" BorderPane.alignment="TOP_CENTER">
         <items>
            <Label alignment="CENTER" contentDisplay="CENTER" text="CHRONIC KIDNEY DIAGNOSTICS SYSTEM " textAlignment="CENTER">
               <font>
                  <Font name="Verdana Bold" size="32.0" />
               </font>
            </Label>
         </items>
         <effect>
            <DropShadow />
         </effect>
      </ToolBar>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER" stylesheets="@bootstrap3.css">
         <children>
            <Button mnemonicParsing="false" onAction="#goHome" prefHeight="32.0" prefWidth="99.0" styleClass="success" text="HOME" />
         </children>
         <BorderPane.margin>
            <Insets top="50.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
